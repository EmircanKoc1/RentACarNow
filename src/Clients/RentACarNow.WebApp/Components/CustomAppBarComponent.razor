
<MudAppBar Fixed="true" Style="@($"background:{Colors.Blue.Lighten1};")">
    <MudContainer MaxWidth="MaxWidth.False">
        <MudGrid Justify="Justify.FlexStart">
            <MudItem xs="6">
                <MudGrid Justify="Justify.FlexStart">
                    <MudItem Class="mt-4" xs="3">
                      <MudText Color="Color.Error" Typo="Typo.h6">
                         RentACarNow
                      </MudText>
                    </MudItem>
                    <MudItem Class="mt-3" xs="3">
                        <CustomAppBarButtonComponent></CustomAppBarButtonComponent>
                    </MudItem>

                    <MudItem Class="mt-3" xs="3">
                        <CustomAppBarButtonComponent></CustomAppBarButtonComponent>
                    </MudItem>

                    <MudItem Class="mt-3" xs="3">
